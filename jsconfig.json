{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "baseUrl": ".",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["src/*"],
      "components/*": ["components/*"],
      "screens/*": ["screens/*"],
      "api/*": ["api/*"],
      "assets/*": ["assets/*"],
      "services/*": ["services/*"],
      "commons/*": ["commons/*"],
      "templates/*": ["templates/*"],
      "navigation/*": ["navigation/*"],
      "test-utils/*": ["test-utils/*"]
    }
  },
  "moduleResolution": "classic",
  "exclude": ["node_modules", "**/node_modules/*", "build"]
}
